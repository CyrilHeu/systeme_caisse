<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/left_border">

    <GridLayout
        android:id="@+id/layout_clavier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="@android:color/white">

        <!-- Ligne 1 -->
        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:layout_marginRight="15dp" />
        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:layout_marginRight="15dp" />

        <!-- Ligne 2 -->
        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:layout_marginRight="15dp"/>

        <!-- Ligne 3 -->
        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:layout_marginRight="15dp"/>

        <!-- Ligne 4 -->
        <Button
            android:id="@+id/btn_clear"
            android:text="C"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_virgule"
            android:text=","
            android:layout_marginRight="15dp"/>

    </GridLayout>

</LinearLayout>
