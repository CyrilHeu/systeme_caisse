<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Nom de l'option -->
        <TextView
            android:id="@+id/nomOption"
            android:layout_width="0dp"
            android:layout_weight="1.15"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textStyle="bold" />

        <!-- Type + Valeurs -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="left"
                android:layout_weight="1.75"
                android:paddingBottom="4dp"/>

            <!-- Valeurs des choix affichÃ©es en gris -->
            <TextView
                android:id="@+id/valeursOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="left"

                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Boutons Modifier / Supprimer -->
        <ImageButton
            android:id="@+id/btnModifierOption"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="Modifier l'option"
            android:padding="8dp"
            app:tint="@color/purple_500"/>

        <ImageButton
            android:id="@+id/btnSupprimerOption"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="Supprimer l'option"
            android:padding="8dp"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
