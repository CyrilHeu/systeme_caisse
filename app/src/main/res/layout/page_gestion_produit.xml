<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Barre de recherche + Spinner sur la même ligne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Barre de recherche -->
        <EditText
            android:id="@+id/searchProduit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Rechercher un produit..."
            android:drawableStart="@android:drawable/ic_menu_search"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#747474"
            android:textSize="16sp"
            android:background="@drawable/edit_text_style"
            android:inputType="text" />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <Spinner
            android:id="@+id/spinnerTriProduit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_weight="1.2"
            android:background="@drawable/custom_spinner_background"
            android:popupBackground="@android:color/white"
            android:textAlignment="center"/>

    </LinearLayout>
    <!-- En-tête du tableau -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/headerNomProduit"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="left" />

        <TextView
            android:id="@+id/headerCategorieProduit"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="Catégorie"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="left" />

        <TextView
            android:id="@+id/headerPrixProduit"
            android:layout_width="80dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="left" />
    </LinearLayout>

    <!-- Liste des produits -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProduits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"/>

    <!-- Bouton d'ajout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAjouterProduit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_add"
        android:contentDescription="Ajouter un produit"
        android:layout_margin="16dp"
        android:backgroundTint="@color/purple_500"
        app:tint="@android:color/white"/>

</LinearLayout>
