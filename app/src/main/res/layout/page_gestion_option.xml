<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Barre de recherche + Spinner sur la même ligne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Barre de recherche -->
        <EditText
            android:id="@+id/searchOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Rechercher une option..."
            android:drawableStart="@android:drawable/ic_menu_search"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#747474"
            android:textSize="16sp"

            android:background="@drawable/edit_text_style"
            android:inputType="text" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <Spinner
            android:id="@+id/spinnerTriOption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_weight="1."
            android:background="@drawable/custom_spinner_background"
            android:popupBackground="@android:color/white"/>

    </LinearLayout>

    <!-- En-tête du tableau -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:textSize="16sp"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/headerNomOption"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="left" />

        <TextView
            android:id="@+id/headerTypeOption"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="left" />

        <TextView
            android:id="@+id/headerValeursOption"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:text="Choix"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="left" />
    </LinearLayout>

    <!-- Liste des options -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"/>

    <!-- Bouton d'ajout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAjouterOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_add"
        android:contentDescription="Ajouter une option"
        android:layout_margin="16dp"
        android:backgroundTint="@color/purple_500"
        app:tint="@android:color/white"/>
</LinearLayout>
