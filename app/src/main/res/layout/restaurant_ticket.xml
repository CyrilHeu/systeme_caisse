<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="@drawable/left_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_left_border">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>

        <TextView
            android:id="@+id/info_ticket_1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:id="@+id/info_ticket_2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">
        </TextView>
        <Button
            android:id="@+id/close_ticket_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close_icon">
        </Button>

    </LinearLayout>
    <!-- Affichage du ticket (liste des articles ajoutés) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/left_border"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/ticket_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Les éléments du ticket seront ajoutés dynamiquement ici -->
        </LinearLayout>

    </ScrollView>


    <!-- Clavier d'encaissement rapide -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/left_border">

        <LinearLayout
            android:id="@+id/layout_affichage_saisie_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="8dp"
            android:background="@drawable/bottom_top_left_border">

            <TextView
                android:id="@+id/tv_saisie_montant"
                android:maxLines="2"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="22sp"
                android:text="0"
                android:layout_gravity="top"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="20sp"
                android:text="Total : 0€"
                android:lines="2"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_solde"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:lines="2"
                android:textSize="18sp"
                android:text="Solde : 0€"
                android:padding="4dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/fragment_clavier_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <Button
                    android:id="@+id/btn_cash"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ESP" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>
                <Button
                    android:id="@+id/btn_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="CB" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>
                <Button
                    android:id="@+id/btn_tr"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="T.R" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_paiement_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Bouton ENCAISSEMENT centré -->
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENCAISSEMENT"
                android:layout_gravity="center"/>

            <!-- Bouton Toggle en bas à droite -->
            <Button
                android:id="@+id/btn_toggle_payment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/arrow_up"/>
        </FrameLayout>

    </LinearLayout>


</LinearLayout>
